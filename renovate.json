{
  "pip_requirements": {
    "enabled": false
  },
  "pip-compile": {
    "fileMatch": [
      "requirements-common.in",
      "requirements-dev.in",
      "requirements.in"
    ]
  },
  "separateMajorMinor": false,
  "packageRules": [
    {
      "description": "Disable pip_requirements to not interfere with pip-compile manager.",
      "matchManagers": [
        "pip_requirements"
      ],
      "enabled": false
    },
    {
      "description": "Add fileMatch to pip-compile, as it's empty by default.",
      "groupName": "backendDependencies",
      "groupSlug": "all-backend-deps",
      "matchManagers": [
        "pip-compile"
      ]
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchManagers": [
        "npm"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump"
      ],
      "groupName": "frontendDevDependencies",
      "groupSlug": "all-fr-devdeps",
      "semanticCommitType": "chore"
    },
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "matchManagers": [
        "npm"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump"
      ],
      "groupName": "frontendDependencies",
      "groupSlug": "all-fr-deps",
      "semanticCommitType": "fix"
    }
  ]
}